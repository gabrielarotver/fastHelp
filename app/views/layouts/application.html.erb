<!DOCTYPE html>
<html>
  <head>
    <title>FastHelp</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script src="//maps.google.com/maps/api/js?v=3.23&key=<%= "#{ENV['SECRET_KEY']}"%>" ></script>
    <script src="//cdn.rawgit.com/mahnunchik/markerclustererplus/master/dist/markerclusterer.min.js"></script>
    <script src='//cdn.rawgit.com/printercu/google-maps-utility-library-v3-read-only/master/infobox/src/infobox_packed.js' type='text/javascript'></script> <!-- only if you need custom infoboxes -->

    <link href="https://fonts.googleapis.com/css?family=Lora|Open+Sans|Yrsa" rel="stylesheet">

    <script src="https://use.fontawesome.com/04772545a8.js"></script>
  </head>

  <body>

    <nav id="mainNav">
      <ul id="navigation">
        <li><img src="/assets/logo2.png" alt="Logo"style="width: 90px; height:60px;"/></li>
        <li id="fastHelp">FastHelp</li>
        <li><%= link_to "HOME", root_path %></li>
        <li><a href="#">ABOUT</a></li>
        <div class="dropdown">
          <button class="dropbtn">EVENTS</button>
          <div class="dropdown-content">
            <%= link_to "List View", events_path(:format => "list") %>
            <%= link_to "Calendar View", events_path(:format => "calendar") %>
          </div>
        </div>
        <li> <a href="#">CONTACT</a></li>
        <% if current_organization %>
          <li><%= link_to "LOG OUT", logout_path %></li>
        <% else %>
          <div class="dropdown">
            <button class="dropbtn">ORGANIZATION</button>
            <div class="dropdown-content">
              <%= link_to "Sign Up", signup_path %>
              <%= link_to "Login", login_path %>
            </div>
          </div>
        <% end %>
      </ul>
    </nav>

    <%= yield %>
    <footer></footer>
  </body>
</html>
