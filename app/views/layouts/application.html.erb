<!DOCTYPE html>
<html>
  <head>
    <title>FastHelp</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script src="//maps.google.com/maps/api/js?v=3.23&key=AIzaSyBjs5QdsLvXs2hnEBp1N-CDzDZvQaOCUW0"></script>
    <script src="//cdn.rawgit.com/mahnunchik/markerclustererplus/master/dist/markerclusterer.min.js"></script>
    <script src='//cdn.rawgit.com/printercu/google-maps-utility-library-v3-read-only/master/infobox/src/infobox_packed.js' type='text/javascript'></script> <!-- only if you need custom infoboxes -->

  </head>

  <body>

    <nav id="mainNav">
      <ul id="navigation">
        <li>ICON</li>
        <li>FastHelp</li>
        <li><%= link_to "HOME", root_path %></li>
        <li><a href="#">ABOUT FASTHELP</a></li>
        <li> <a href="#">CONTACT US</a></li>
        <% if current_organization %>
          <li><%= link_to "LOG OUT", logout_path %></li>
        <% else %>
           <li><%= link_to "ORGANIZATION SIGN UP", signup_path %></li>
           <li><%= link_to "ORGANIZATION LOG IN", login_path%></li>
        <% end %>
      </ul>
    </nav>

    <% flash.each do |key, value| %>
      <%= content_tag(:div, class: "alert alert-#{key}") do %>
        <p><%= value %></p>
      <% end %>
    <% end %>

    <%= yield %>
  </body>
</html>
