<!DOCTYPE html>
<html>
  <head>
    <title>FastHelp</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script src="//maps.google.com/maps/api/js?v=3.23&key=AIzaSyBjs5QdsLvXs2hnEBp1N-CDzDZvQaOCUW0"></script>
    <script src="//cdn.rawgit.com/mahnunchik/markerclustererplus/master/dist/markerclusterer.min.js"></script>
    <script src='//cdn.rawgit.com/printercu/google-maps-utility-library-v3-read-only/master/infobox/src/infobox_packed.js' type='text/javascript'></script> <!-- only if you need custom infoboxes -->
  </head>

  <body>

    <div id="organization_header">
      <%= link_to "Home", root_path %>
      <%= link_to "Events", events_path %>
      <% if current_organization %>
        <%= current_organization.org_name %>
        <%= link_to "Log Out", logout_path %>
      <% else %>
        <%= link_to "Org Sign Up", signup_path %>
        <%= link_to "Org Log In", login_path%>
      <% end %>
    </div>

    <% flash.each do |key, value| %>
      <%= content_tag(:div, class: "alert alert-#{key}") do %>
        <p><%= value %></p>
      <% end %>
    <% end %>

    <%= yield %>
  </body>
</html>
