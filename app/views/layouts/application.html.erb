<!DOCTYPE html>
<html>
    <head>
        <title>FastHelp</title>
        <%= csrf_meta_tags %>

        <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
        <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
        <script type="text/javascript"
        src="https://maps.googleapis.com/maps/api/js?v=3&amp;key=<%= "#{ENV['SECRET_KEY']}" %>"></script>

        <script src="//cdn.rawgit.com/mahnunchik/markerclustererplus/master/dist/markerclusterer.min.js"></script>
        <script src='//cdn.rawgit.com/printercu/google-maps-utility-library-v3-read-only/master/infobox/src/infobox_packed.js' type='text/javascript'></script>
        <!-- only if you need custom infoboxes -->

        <link href="https://fonts.googleapis.com/css?family=Cantarell|Fjalla+One|Raleway|Roboto+Slab" rel="stylesheet">

        <script src="https://use.fontawesome.com/04772545a8.js"></script>
    </head>

    <body>

        <nav id="mainNav">
            <ul id="navigation">
                <li>
                    <a href="/"><img src="/assets/logo2.png" alt="Logo" style="width: 90px; height:60px;"/></a>
                </li>

                <li id="fastHelp">
                    <a href="/">FastHelp</a>
                </li>

                <li><%= link_to "HOME", root_path %></li>
                </div>
                <div class="dropdown">
                    <button class="dropbtn">EVENTS</button>
                    <div class="dropdown-content">
                        <%= link_to "List View", events_path(:f => "list") %>
                        <%= link_to "Calendar View", events_path(:f => "calendar") %>
                    </div>
                </div>
                <div class="dropdown">
                    <button class="dropbtn">ORGANIZATIONS</button>
                    <div class="dropdown-content">
                      <%= link_to "All Organizations", organizations_path %>
                      <% if current_organization %>
                      <%= link_to "My Organization", current_organization %>
                        <% end %>
                    </div>
                </div>
                <li>
                    <a href="#">CONTACT</a>
                </li>
                <li><%= link_to "SIGN UP", signup_path %></li>
                <li><%= link_to "LOG IN", login_path %></li>
                <% if current_organization %>
                <li><%= link_to "LOGOUT", logout_path %></li>
                <% end %>
            </ul>
        </nav>

        <%= yield %>
        <div class="page-wrap">
        </div>

        <footer class="site-footer">

        </footer>
    </body>
</html>
