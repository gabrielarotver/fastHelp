<div class="title">
  <h1>Organizations Directory</h1>
</div>


<% if flash[:alert] %>
   <div class="alert"><%= flash[:alert] %></div>
 <% end %>

<div id="index-orgs-container">

  <div id="search-near-me">
    <%= form_tag organizations_path, :method => :get do %>

      <div class="searchBox">
        <%= text_field_tag :search, params[:search], placeholder: 'Enter Zip, City, Org Name', class: "form-control"%>
      </div>
      <%= submit_tag "Search", :name => nil, class: "srchBtn" %>
    <% end %>
  </div>

  <div id="all-orgs">
    <% @organizations.each do |organization| %>
      <div class="org">
        <%= image_tag organization.image.url(:medium) %>
        <div class="orgInfo">
          <%= link_to organization.org_name, organization %> <br>
          <% if !organization.description.nil? %>
            <%= organization.description.truncate(300) %>
          <% end %>
          <%= link_to 'Destroy', organization, method: :delete, data: { confirm: 'Are you sure?' } %>
        </div>
      </div>
    <% end %>
  </div>

</div>
