<div class="title">
  <h1>Organizations Directory</h1>
</div>




<div id="index-orgs-container">

  <div id="search-near-me">
    <%= form_tag organizations_path, :method => :get do %>
      <%= text_field_tag :search, params[:search] %>
      <%= submit_tag "Search Near", :name => nil %>
    <% end %>

  </div>

  <div id="all-orgs">
    <% @organizations.each do |organization| %>
      <div class="org">
        <%= image_tag organization.image.url(:medium) %>
        <div class="orgInfo">
          <%= link_to organization.org_name, organization %> <br>
          <% if !organization.description.nil? %>
            <%= organization.description.truncate(300) %>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>

</div>

<table>
  <thead>
    <tr>
      <th>Organization name</th>
      <th>Organization type</th>
      <th>Contact Name</th>
      <th>Contact Number</th>
      <th>Street Address</th>
      <th>City</th>
      <th>State</th>
      <th>Zip code</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @organizations.each do |organization| %>
      <tr>
        <td><%= organization.org_name %></td>
        <td><%= organization.org_type %></td>
        <td><%= organization.contact_name %></td>
        <td><%= organization.contact_number %></td>
        <td><%= organization.street_address %></td>
        <td><%= organization.city %></td>
        <td><%= organization.state %></td>
        <td><%= organization.zip_code %></td>
        <td><%= organization.email %></td>
        <td>
          <% if !(organization.image.url == "/images/original/missing.png") %>
            <%= image_tag organization.image.url(:medium) %>
          <% else %>
            <%= organization.org_name %>
          <% end %>
        </td>
        <td><%= link_to 'Show', organization %></td>
        <td><%= link_to 'Edit', edit_organization_path(organization) %></td>
        <td><%= link_to 'Destroy', organization, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

