<div class="title">
  <h1>Log In</h1>
</div>

<div class="loginFormContainer">
<%= form_tag sessions_path do %>
  <fieldset class="login">
    <div class="field">
      <%= label_tag :email %>
      <%= email_field_tag :email %>
    </div>

    <div class="field">
      <%= label_tag :password %><br>
      <%= password_field_tag :password %>
    </div>

      <div class="actions">
        <%= submit_tag "Log In" %>
      </div>
    <% end %>
  </fieldset>
</div>

<% if flash[:alert] %>
    <div class="alert"><%= flash[:alert] %></div>
<% end %>
