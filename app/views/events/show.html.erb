<div class="title">
  <h1><%= @event.event_name %></h1>
</div>

<div id="event-details">
  <div class="detail">
    <h2>Organization:</h2>
    <p>
      <%= @event.organization %>
    </p>
  </div>

  <div class="detail">
    <h2>Date</h2>
    <p>
      <%= @event.date.strftime("%m/%d/%Y") %>
    </p>
  </div>

  <div class="detail">
    <h2>Time</h2>
    <p>
      <%= @event.time.strftime("%H:%M %p") %>
    </p>
  </div>

  <div class="detail">
    <h2>Address</h2>
    <p>
      <%= @event.street_address %>
      <%= @event.city %>, <%= @event.state %>, <%= @event.zip_code %>
    </p>
  </div>

  <div class="detail">
    <h2>About this event:</h2>
    <%= @event.description %>
  </div>
</div>

<div id="map-container">
  <div id="map-canvas"></div>
</div>


<h3>Nearby Events</h3>
<ul>
  <% if !@event.nearbys(30).nil? %>
    <% for event in @event.nearbys(30) %>
      <li><%= link_to event.address, event %> (<%= event.distance.round(2) %>) miles </li>
    <% end %>
  <% end %>
</ul>

<% if current_organization && @event.organization == current_organization %>
  <%= link_to 'Edit', edit_event_path(@event) %> |
<% end %>
<%= link_to 'Back', events_path %>
