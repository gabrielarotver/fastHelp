<%= form_for(event) do |f| %>
  <% if event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <fieldset class="row1">
    <div class="field">
      <%= f.label :event_name %>
      <%= f.text_field :event_name, class: "form-control" %>
    </div>
  </fieldset>

  <fieldset class="row1 event-row1">
  <div class="field field-date">
    <%= f.label :date %>
    <%= f.date_select :date %>
  </div>

  <div class="field field-time">
    <%= f.label :time %>
    <%= f.time_select :time,  {ampm: true, minute_step: 15} %>
  </div>
</fieldset>

<fieldset class="row2">
  <div class="field">
    <%= f.label :street_address %>
    <%= f.text_field :street_address, class: "form-control" %>
  </div>

  <div class="field">
    <%= f.label :city %>
    <%= f.text_field :city, class: "form-control" %>
  </div>

  <div class="field">
    <%= f.label :state %>
    <%= f.text_field :state, class: "form-control" %>
  </div>

  <div class="field">
    <%= f.label :zip_code %>
    <%= f.text_field :zip_code, class: "form-control" %>
  </div>
</fieldset>

<fieldset class="row2">
  <div class="field">
    <%= f.label :image %>
    <%= f.file_field :image %>
  </div>
  <div class="field">
    <%= f.label :description %>
    <%= f.text_area :description, class: "form-control" %>
  </div>
</fieldset>

<div class="actions" id="submit-btn">
      <%= f.submit %>
</div>
<% end %>
