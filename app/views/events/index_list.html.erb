


<div id="all-events">
  <!-- search bar only visible to users, not organizations with own events -->
  <% if current_organization.nil? %>
    <%= form_tag events_path, :method => :get do %>
      <p>
        <%= text_field_tag :search, params[:search] %>
        <%= submit_tag "Search Near: ", :name => nil %>
      </p>
    <% end %>
  <% end %>
</div>

<table>
  <thead>
    <tr>
      <th>Organization</th>
      <th>Event name</th>
      <th>Date</th>
      <th>Time</th>
      <th>Street address</th>
      <th>City</th>
      <th>State</th>
      <th>Zip code</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.organization %></td>
        <td><%= event.event_name %></td>
        <td><%= event.date.strftime("%m/%d/%Y") %></td>
        <td><%= event.time.strftime("%r") %></td>
        <td><%= event.street_address %></td>
        <td><%= event.city %></td>
        <td><%= event.state %></td>
        <td><%= event.zip_code %></td>
        <td><% if !(event.image.url == "/images/original/missing.png") %>
          <%= image_tag event.image.url(:medium) %>
          <% else %>
            <%= event.event_name %>
        <% end %>
      </td>
        <td><%= link_to 'Show', event %></td>
        <td> <% if current_organization && event.organization == current_organization %>  <%= link_to 'Edit', edit_event_path(event) %> <% end %></td>
        <td><% if current_organization && event.organization == current_organization %><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %> <% end %></td>
      </tr>
    <% end %>
  </tbody>
</table>


<div id="events-container">
  <% @events.each do |event| %>
    <div class="singleEventContainer">
      <%= link_to event do %>
        <div class="eventImageInfo">
          <%= image_tag event.image.url(:medium) %>
          <div class="specificInfo">
            <%= event.event_name %> <br>
            <%= event.date.strftime("%m/%d/%Y") %>
            <%= event.time.strftime("%r") %>
          </div>
        </div>
      <% end %>

      <div class="links">
        <%= link_to 'Show', event %>
        <%= link_to 'Edit', edit_event_path(event) %>
        <%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %>
      </div>

    </div>
  <% end %>
</div>
